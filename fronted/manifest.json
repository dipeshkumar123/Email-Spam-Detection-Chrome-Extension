{
    "manifest_version": 3,
    "name": "Email Spam Detector",
    "version": "1.0",
    "description": "Filters emails to detect spam",
    "host_permissions": [
        "https://127.0.0.1:5000/*"
    ],
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}